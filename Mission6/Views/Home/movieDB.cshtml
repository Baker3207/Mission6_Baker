<table class="table table-bordered table-striped">

    <thead class="thead-dark fw-bold">
        <tr>
            <th style="text-align:center" class="bg-black text-white">Category</th>
            <th class="bg-black text-white">Title</th>
            <th style="text-align:center" class="bg-black text-white">Year</th>
            <th class="bg-black text-white">Director</th>
            <th style="text-align:center" class="bg-black text-white">Rating</th>
            <th style="text-align:center" class="bg-black text-white">Edited</th>
            <th style="text-align:center" class="bg-black text-white">Lent To</th>
            <th style="text-align:center" class="bg-black text-white">Copied To Plex</th>
            <th style="text-align:center" class="bg-black text-white">Notes</th>
            <th style="text-align:center" class="bg-black text-white">Edit</th>
            <th style="text-align:center" class="bg-black text-white">Delete</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td style="text-align:center">@x.CategoryId</td>
                <td>@x.Title</td>
                <td style="text-align:center">@x.Year</td>
                <td>@x.Director</td>
                <td style="text-align:center">@x.Rating</td>
                <td style="text-align:center">@x.Edited</td>
                <td style="text-align:center">@x.LentTo</td>
                <td style="text-align:center">@x.CopiedToPlex</td>
                <td style="text-align:center">@x.Notes</td>

                <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieID">Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieID">Delete</a></td>
            </tr>
        }
    </tbody>

</table>