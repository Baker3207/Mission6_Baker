@model movie
<h1 style="text-align:center">Add a film to the list!</h1>
<p style="text-align:center">Is my list missing one of your favorite films? Fill out the form below to add it to my list!</p>

<form method="post" style="max-width: 400px; margin: auto;">
    <input asp-for="MovieID" type="hidden" />

    <label asp-for="CategoryId">Category:</label>
    <select asp-for="CategoryId" style="width: 100%; padding: 8px; margin-bottom: 16px; box-sizing: border-box;">
        <option value=1>Miscellaneous</option>
        <option value=2>Drama</option>
        <option value=3>Television</option>
        <option value=4>Horror/Suspense</option>
        <option value=5>Comedy</option>
        <option value=6>Family</option>
        <option value=7>Action/Adventure</option>
        <option value=8>VHS</option>
    </select><br /><br />

    <label asp-for="Title">Title:</label>
    <input asp-for="Title" type="text" required style="width: 100%; padding: 8px; margin-bottom: 16px; box-sizing: border-box;"><br /><br />

    <label asp-for="Year">Year:</label>
    <input asp-for="Year" type="number" min=1888 required style="width: 100%; padding: 8px; margin-bottom: 16px; box-sizing: border-box;"><br /><br />

    <label asp-for="Director">Director:</label>
    <input asp-for="Director" type="text" required style="width: 100%; padding: 8px; margin-bottom: 16px; box-sizing: border-box;"><br /><br />

    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating" required style="width: 100%; padding: 8px; margin-bottom: 16px; box-sizing: border-box;">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select><br /><br />

    <label asp-for="Edited">Edited:</label>
    <select asp-for="Edited" required style="width: 100%; padding: 8px; margin-bottom: 16px; box-sizing: border-box;">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br /><br />

    <label asp-for="LentTo">Lent To:</label>
    <input asp-for="LentTo" type="text" style="width: 100%; padding: 8px; margin-bottom: 16px; box-sizing: border-box;"><br /><br />

    <label asp-for="CopiedToPlex">Copied To Plex:</label>
    <select asp-for="CopiedToPlex" required style="width: 100%; padding: 8px; margin-bottom: 16px; box-sizing: border-box;">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br /><br />

    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes" maxlength="25" type="text" style="width: 100%; padding: 8px; margin-bottom: 16px; box-sizing: border-box;"><br /><br />

    <button type="submit" style="background-color: #007bff; color: #fff; padding: 10px; border: none; border-radius: 4px; cursor: pointer; margin: auto; display: block;">Submit</button>

</form>

<div asp-validation-summary="All"></div>

